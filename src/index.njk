---
layout: base.njk
templateEngineOverride: md, njk
---
<header class="tdbc-hero tdbc-background--gray tdbc-ink--light hero-image">
  <h1>Signature Deliveries</h1>
  <button class="tdbc-button tdbc-ink--light tdbc-button--primary">Get a FREE Quote</button>
</header>

<main class="tdbc-container">
  <div class="tdbc-section">
    <ul class="tdbc-column-container">
      {%- for page in collections.pages -%}
      <li class="tdbc-card tdbc-background--secondary tdbc-ink--light">
         <img src="{{ page.data.image}}" alt="pupper" />
        <div class="tdbc-card__content">
          <a href="{{ page.url }}" class="tdbc-card__title tdbc-ink--light">{{ page.data.title }}</a>
          <p>{{ page.data.description }}</p>
        </div>
      </li>
      {%- endfor -%}
    </ul>
  </div>
{{ content | safe }}

</main>
